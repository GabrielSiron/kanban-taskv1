generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                Int @id @default(autoincrement())
  name              String
  email             String @unique
  password          String
  cycle             Cycle[]
  day               Day[]
  task              Task[]

}

model Cycle {
  id                Int @id @default(autoincrement())
  initialDate       DateTime @default(now())
  finalDate         DateTime
  duration          Int
  day               Day[]
  user              User? @relation(fields: [userId], references: [id])
  userId            Int?

}

model Day {
  id                Int @id @default(autoincrement())
  title             String
  date              DateTime
  task              Task[]
  cycle             Cycle? @relation(fields: [cycleId], references: [id])
  cycleId           Int?
  user              User? @relation(fields: [userId], references: [id])
  userId            Int?

}

model Task {
  id                Int @id @default(autoincrement())
  title             String
  description       String
  status            String @default("to do")
  tag               Tag? @relation(fields: [tagId], references: [id])
  tagId             Int? 
  day               Day? @relation(fields: [dayId], references: [id])
  dayId             Int?
  user              User? @relation(fields: [userId], references: [id])
  userId            Int?

}

model Tag {
  id                Int @id @default(autoincrement())
  title             String
  color             String
  task              Task[]

}